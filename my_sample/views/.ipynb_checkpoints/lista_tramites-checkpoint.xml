<odoo>
    <data>
        <template id="lista_tramites">
            <t t-call="website.layout">
            <t t-set="additional_title">Trámites</t>
            <t t-call="my_sample.header_form_matricula"/>
                <div class="container text-center">
                    <h4><b>Trámites de <t t-raw="(persona.x_name)"/> <t t-raw="(persona.x_last_name)"/>
                        - <t t-raw="(persona.x_document_type_ID[0].x_name)"/> : <t t-raw="(persona.x_document)"/></b></h4>
                    <table class="table" t-if="len(tramites) > 0">
                        <thead>
                            <tr>
                                <th scope="col">Fecha del tramite:</th>
                                <th scope="col">Nombre del trámite:</th>
                                <th scope="col">Ciclo del Servicio:</th>
                                <th scope="col">Origen</th>
                            </tr>
                          </thead>
                          <tbody>
                              <t t-foreach="tramites" t-as="i">
                                <tr>
                                    <td><t t-esc="i.x_req_date"/></td>
                                    <td><t t-esc="i.x_service_ID[0].x_name"/></td>
                                    <td><t t-esc="i.x_cycle_ID[0].x_name"/></td>
                                    <td><t t-esc="i.x_origin_type[0].x_name"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <h5 t-else="">
                        El documento <t t-raw="(persona.x_document_type_ID[0].x_name)"/> : 
                        <t t-raw="(persona.x_document)"/> esta registrado pero no tiene ningún trámite
                    </h5>
                </div>
                <br/>
            </t>
        </template>
    </data>
</odoo>